---
interface Props {
  title?: string;
  logos: {
    name: string;
    alt?: string;
  }[];
}

const { title = 'ðŸª„ Building AI Products for Enterprise', logos } = Astro.props;
---

<div class="logo-carousel-wrapper">
  <div class="logo-carousel">
    <div class="logo-track">
      {
        logos.map((logo) => (
          <div class="logo-item">
            <div class="logo-image">
              <img
                src={`/logos/${logo.name.toLowerCase().replace(/[^a-z0-9]/g, '')}.svg`}
                alt={`${logo.name} logo`}
                class={`logo-${logo.name.toLowerCase().replace(/[^a-z0-9]/g, '')}`}
                onerror="this.onerror=null; this.style.display='none'; this.parentNode.innerHTML='<span class=\'logo-name\'>' + this.alt.replace(' logo', '') + '</span>';"
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="title-container">
    <div class="title-wrapper">
      <div class="title-line"></div>
      <h3 class="carousel-title">
        {title}
      </h3>
    </div>
  </div>
</div>

<style>
  .logo-carousel-wrapper {
    width: 100vw;
    position: relative;
    padding: 15px 0 35px;
    background-color: var(--color-background);
    margin-top: 30px;
    margin-bottom: 30px;
    box-sizing: border-box;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .logo-carousel {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 20px 0 35px;
    max-width: 100%;
  }

  .logo-track {
    display: flex;
    animation: scroll 80s linear infinite;
    width: max-content;
    gap: 10px; /* Add a small gap between items for more consistent spacing */
  }

  .logo-item {
    display: flex;
    align-items: center;
    margin: 0 50px;
    min-width: 150px; /* Ensure consistent spacing */
    justify-content: center;
  }

  .logo-image {
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
    transition: opacity 0.3s ease;
    min-width: 120px; /* Ensure minimum width for logo container */
  }

  .logo-image img {
    height: 100%;
    max-width: 150px;
    object-fit: contain;
    /* Removed grayscale filter to show natural colors */
  }

  .logo-name {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    white-space: nowrap;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .logo-item:hover .logo-name,
  .logo-item:hover .logo-image {
    opacity: 1;
  }

  .title-container {
    max-width: 1200px;
    margin: 15px auto 0;
    padding: 0 20px;
    position: relative;
    box-sizing: border-box;
    text-align: left;
  }

  .title-wrapper {
    display: inline-block;
  }

  .carousel-title {
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--color-text-secondary);
    letter-spacing: 0.01em;
    opacity: 0.7;
    margin: 0;
  }

  .uppercase {
    text-transform: uppercase;
  }

  .title-line {
    height: 1px;
    background-color: var(--color-text-secondary);
    opacity: 0.3;
    margin-bottom: 6px;
    width: 100%;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Custom spacing for specific logos */
  .logo-item:has(.logo-hpi),
  .logo-item:has(.logo-dxctechnologies),
  .logo-item:has(.logo-usairforce) {
    margin: 0 23px; /* Reduced from the default 50px */
  }

  .logo-item:has(.logo-veritastechnologies),
  .logo-item:has(.logo-verizon) {
    margin: 0 40px; /* Reduced from the default 50px */
  }

  .logo-item:has(.logo-mckesson) {
    margin: 0 45px; /* Reduced from the default 50px */
  }

  /* Custom logo sizes for specific logos */
  .logo-airbus {
    height: auto !important;
    width: auto !important;
    transform: scale(1.8);
  }

  .logo-amerisourcebergen {
    height: auto !important;
    width: auto !important;
    transform: scale(2.3);
  }

  .logo-att {
    height: auto !important;
    width: auto !important;
    transform: scale(0.9);
  }

  .logo-boeing {
    height: auto !important;
    width: auto !important;
    transform: scale(1.5);
  }

  .logo-dxctechnologies {
    height: auto !important;
    width: auto !important;
    transform: scale(0.8);
  }

  .logo-extremenetworks {
    height: auto !important;
    width: auto !important;
    transform: scale(1.5);
  }

  .logo-hewlettpackardenterprise {
    height: auto !important;
    width: auto !important;
    transform: scale(1.2);
  }

  .logo-hpi {
    height: auto !important;
    width: auto !important;
    transform: scale(01);
  }

  .logo-lumentechnologies {
    height: auto !important;
    width: auto !important;
    transform: scale(1.4);
  }

  .logo-mckesson {
    height: auto !important;
    width: auto !important;
    transform: scale(1.4);
  }

  .logo-nbcuniversal {
    height: auto !important;
    width: auto !important;
    transform: scale(1.2);
  }

  .logo-paloaltonetworks {
    height: auto !important;
    width: auto !important;
    transform: scale(1.6);
  }

  .logo-seagate {
    height: auto !important;
    width: auto !important;
    transform: scale(2.1);
  }

  .logo-segmentio {
    height: auto !important;
    width: auto !important;
    transform: scale(1.1);
  }

  .logo-usairforce {
    height: auto !important;
    width: auto !important;
    transform: scale(0.7);
  }

  .logo-veritastechnologies {
    height: auto !important;
    width: auto !important;
    transform: scale(1.4);
  }

  .logo-verizon {
    height: auto !important;
    width: auto !important;
    transform: scale(1.2);
  }

  .logo-worldpay {
    height: auto !important;
    width: auto !important;
    transform: scale(1.7);
  }
</style>

<script>
  // Clone the logos to create a seamless loop
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.querySelector('.logo-track');
    if (track) {
      const items = track.querySelectorAll('.logo-item');
      items.forEach((item) => {
        const clone = item.cloneNode(true);
        track.appendChild(clone);
      });
    }
  });
</script>
