---
interface Props {
  title?: string;
  logos: {
    name: string;
    alt?: string;
  }[];
}

const { title = 'Building AI Products for Enterprise', logos } = Astro.props;
---

<div class="logo-carousel-wrapper">
  <div class="logo-carousel">
    <div class="logo-track">
      {
        logos.map((logo) => (
          <div class="logo-item">
            <div class="logo-image">
              <img
                src={`/logos/${logo.name.toLowerCase().replace(/[^a-z0-9]/g, '')}.svg`}
                alt={`${logo.name} logo`}
                class={`logo-${logo.name.toLowerCase().replace(/[^a-z0-9]/g, '')}`}
                onerror="this.onerror=null; this.style.display='none'; this.parentNode.innerHTML='<span class=\'logo-name\'>' + this.alt.replace(' logo', '') + '</span>';"
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="title-container">
    <div class="title-wrapper">
      <div class="title-line"></div>
      <h3 class="carousel-title">
        {title}
      </h3>
    </div>
  </div>
</div>

<style>
  .logo-carousel-wrapper {
    width: 100vw;
    position: relative;
    padding: 15px 0 35px;
    background-color: var(--color-background);
    margin-top: 30px;
    margin-bottom: 30px;
    box-sizing: border-box;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .logo-carousel {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 20px 0 35px;
    max-width: 100%;
  }

  .logo-track {
    display: flex;
    animation: scroll 90s linear infinite;
    width: max-content;
    gap: 10px; /* Add a small gap between items for more consistent spacing */
  }

  .logo-item {
    display: flex;
    align-items: center;
    margin: 0 50px;
    min-width: 150px; /* Ensure consistent spacing */
    justify-content: center;
  }

  .logo-image {
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
    transition: opacity 0.3s ease;
    min-width: 120px; /* Ensure minimum width for logo container */
  }

  .logo-image img {
    height: 100%;
    max-width: 150px;
    object-fit: contain;
    /* Removed grayscale filter to show natural colors */
  }

  .logo-name {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    white-space: nowrap;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .logo-item:hover .logo-name,
  .logo-item:hover .logo-image {
    opacity: 1;
  }

  .title-container {
    max-width: 1200px;
    margin: 15px auto 0;
    padding: 0 20px;
    position: relative;
    box-sizing: border-box;
    text-align: left;
  }

  .title-wrapper {
    display: inline-block;
  }

  .carousel-title {
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--color-text-secondary);
    letter-spacing: 0.01em;
    opacity: 0.7;
    margin: 0;
  }

  .uppercase {
    text-transform: uppercase;
  }

  .title-line {
    height: 1px;
    background-color: var(--color-text-secondary);
    opacity: 0.3;
    margin-bottom: 6px;
    width: 100%;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Custom logo sizes for specific logos */
  .logo-seagate,
  .logo-paloaltonetworks,
  .logo-airbus,
  .logo-mckesson {
    height: auto !important;
    width: auto !important;
    transform: scale(1.7);
  }

  .logo-amerisourcebergen {
    height: auto !important;
    width: auto !important;
    transform: scale(1.785); /* 5% bigger than 1.7 */
  }

  .logo-veritastechnologies {
    height: auto !important;
    width: auto !important;
    transform: scale(1.53); /* 10% smaller than 1.7 */
  }

  .logo-worldpay {
    height: auto !important;
    width: auto !important;
    transform: scale(1.615); /* 5% smaller than 1.7 */
  }

  .logo-boeing,
  .logo-lumentechnologies {
    height: auto !important;
    width: auto !important;
    transform: scale(1.3);
  }

  .logo-hewlettpackardenterprise {
    height: auto !important;
    width: auto !important;
    transform: scale(1.1);
  }

  .logo-att {
    height: auto !important;
    width: auto !important;
    transform: scale(0.65);
  }

  .logo-segmentio {
    height: auto !important;
    width: auto !important;
    transform: scale(0.866); /* 5% bigger than 0.825 */
  }

  .logo-extremenetworks {
    height: auto !important;
    width: auto !important;
    transform: scale(1.21); /* 15% bigger than 1.05 */
  }

  .logo-nbcuniversal {
    height: auto !important;
    width: auto !important;
    transform: scale(1.04); /* 5% bigger than 0.99 */
  }

  .logo-usairforce {
    height: auto !important;
    width: auto !important;
    transform: scale(0.75); /* 15% smaller than 0.88 */
  }

  .logo-verizon {
    height: auto !important;
    width: auto !important;
    transform: scale(1.2);
  }

  .logo-hpi {
    height: auto !important;
    width: auto !important;
    transform: scale(1.08); /* 10% smaller than 1.2 */
  }

  @media (max-width: 768px) {
    .logo-item {
      margin: 0 30px;
      min-width: 120px; /* Ensure consistent spacing on mobile */
    }

    .logo-image {
      height: 40px;
      min-width: 100px;
    }

    .logo-image img {
      max-width: 120px;
    }

    .logo-name {
      font-size: 0.9rem;
    }

    .title-container {
      padding: 0 15px;
      text-align: left;
    }

    .logo-carousel-wrapper {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }

    /* Adjust scaling for mobile */
    .logo-seagate,
    .logo-paloaltonetworks,
    .logo-airbus,
    .logo-mckesson {
      transform: scale(1.5);
    }

    .logo-amerisourcebergen {
      transform: scale(1.575); /* 5% bigger than 1.5 */
    }

    .logo-veritastechnologies {
      transform: scale(1.35); /* 10% smaller than 1.5 */
    }

    .logo-worldpay {
      transform: scale(1.425); /* 5% smaller than 1.5 */
    }

    .logo-boeing,
    .logo-lumentechnologies {
      transform: scale(1.2);
    }

    .logo-hewlettpackardenterprise {
      transform: scale(1);
    }

    .logo-att {
      transform: scale(0.55);
    }

    .logo-segmentio {
      transform: scale(0.751); /* 5% bigger than 0.715 */
    }

    .logo-extremenetworks {
      transform: scale(1.09); /* 15% bigger than 0.95 */
    }

    .logo-nbcuniversal {
      transform: scale(0.924); /* 5% bigger than 0.88 */
    }

    .logo-usairforce {
      transform: scale(0.68); /* 15% smaller than 0.8 */
    }

    .logo-verizon {
      transform: scale(1.1);
    }

    .logo-hpi {
      transform: scale(0.99); /* 10% smaller than 1.1 */
    }
  }
</style>

<script>
  // Clone the logos to create a seamless loop
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.querySelector('.logo-track');
    if (track) {
      const items = track.querySelectorAll('.logo-item');
      items.forEach((item) => {
        const clone = item.cloneNode(true);
        track.appendChild(clone);
      });
    }
  });
</script>
