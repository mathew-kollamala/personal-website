---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="error-container">
    <h1>404</h1>
    <h2>Page Not Found</h2>
    <p>The page you are looking for doesn't exist or has been moved.</p>
    <a href="/" class="home-btn">Go Home</a>
  </div>
</Layout>

<style>
  .error-container {
    text-align: center;
    padding: 60px 20px;
    max-width: 600px;
    margin: 0 auto;
  }
  
  h1 {
    font-size: 6rem;
    color: #0066cc;
    margin-bottom: 10px;
  }
  
  h2 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
  }
  
  p {
    margin-bottom: 30px;
    font-size: 1.1rem;
  }
  
  .home-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #0066cc;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
  }
  
  .home-btn:hover {
    background-color: #0052a3;
  }
</style>
