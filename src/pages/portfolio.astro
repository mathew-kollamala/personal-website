---
import Layout from '../layouts/Layout.astro';

// In a real project, this data might come from a CMS or API
const projects = [
  {
    id: 1,
    title: 'Project 1',
    description: 'Description of project 1. This is a sample project that showcases my skills in web development.',
    technologies: ['HTML', 'CSS', 'JavaScript'],
    image: '/placeholder-project.jpg',
    link: '#'
  },
  {
    id: 2,
    title: 'Project 2',
    description: 'Description of project 2. This is another sample project that demonstrates my abilities in UI/UX design.',
    technologies: ['React', 'Node.js', 'MongoDB'],
    image: '/placeholder-project.jpg',
    link: '#'
  },
  {
    id: 3,
    title: 'Project 3',
    description: 'Description of project 3. This project highlights my expertise in backend development and database management.',
    technologies: ['Python', 'Django', 'PostgreSQL'],
    image: '/placeholder-project.jpg',
    link: '#'
  },
  {
    id: 4,
    title: 'Project 4',
    description: 'Description of project 4. A mobile application developed for iOS and Android platforms.',
    technologies: ['React Native', 'Firebase'],
    image: '/placeholder-project.jpg',
    link: '#'
  }
];
---

<Layout title="Portfolio | My Personal Website">
  <section class="portfolio-section">
    <h1>My Portfolio</h1>
    <p class="intro">Here are some of the projects I've worked on. Each project represents a unique challenge and solution.</p>
    
    <div class="projects-grid">
      {projects.map(project => (
        <div class="project-card">
          <div class="project-image">
            <!-- Replace with actual project images -->
            <div class="placeholder-image">Project Image</div>
          </div>
          <div class="project-details">
            <h2>{project.title}</h2>
            <p>{project.description}</p>
            <div class="technologies">
              {project.technologies.map(tech => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
            <a href={project.link} class="project-link">View Project</a>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>

<style>
  .portfolio-section {
    padding: 30px;
    background-color: #f9f9f9;
    border-radius: 5px;
  }
  
  h1 {
    color: #0066cc;
    margin-bottom: 20px;
    text-align: center;
  }
  
  .intro {
    text-align: center;
    margin-bottom: 40px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
  }
  
  .project-card {
    background-color: white;
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
  }
  
  .project-image {
    width: 100%;
    height: 200px;
  }
  
  .placeholder-image {
    width: 100%;
    height: 100%;
    background-color: #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
  }
  
  .project-details {
    padding: 20px;
  }
  
  .project-details h2 {
    color: #0066cc;
    margin-bottom: 10px;
  }
  
  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin: 15px 0;
  }
  
  .tech-tag {
    background-color: #e6f0ff;
    color: #0066cc;
    padding: 3px 10px;
    border-radius: 15px;
    font-size: 0.8rem;
  }
  
  .project-link {
    display: inline-block;
    padding: 8px 15px;
    background-color: #0066cc;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    margin-top: 15px;
  }
  
  .project-link:hover {
    background-color: #0052a3;
  }
  
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
